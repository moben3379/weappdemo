    <sql id="Base_Column_List">
        Menu_Id,Menu_Name,Menu_Price,Menu_Form,Menu_Count,Menu_Icon,Menu_detail
    </sql>
    <insert id="AlterFoodMenu">
        Update FoodMenu_Information
        Set Menu_Name = #{Name,jdbcType=VARCHAR} ,
            Menu_Price = #{Price,jdbcType=DOUBLE},
            Menu_Form = #{Form,jdbcType=VARCHAR},
            Menu_Count = #{Count,jdbcType=INTEGER},
            Menu_Icon = #{Icon,jdbcType=VARCHAR},
            Menu_detail = #{Detail,jdbcType=VARCHAR}
        Where Menu_Id = #{Id,jdbcType=INTEGER}
    </insert>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from FoodMenu_Information
    </select>
